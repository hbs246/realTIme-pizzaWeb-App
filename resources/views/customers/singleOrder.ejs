
<section class="status ">

    <div class="container mx-auto">

        <div class="status-box W-2/3 mx-auto">

            <div class=" flex items-centers justify-between">
                <h1 class="text-xl font-bold ">Track Delivery Status</h1>
                <p class="bg-white rounded-full px-4 py-1 text-green-600 hover:text-red-500 "><%= order._id %></p>

                <input type="hidden" id="orderInput" value="<%= JSON.stringify(order) %>">
            </div>

            <ul class="mt-10">
                <li class="status_line text-xl pb-12" id="placed" data-status="order_placed">
                    <span>Order Placed</span>
                </li>
                <li class="status_line text-xl pb-12 " data-status="confirmed">
                    <span>Order Conformation</span>
                </li>
    
                <li class="status_line text-xl pb-16" data-status="prepared">
                    <span>Preparation</span>
                </li>
    
                <li class="status_line text-xl pb-16" data-status="delivered">
                    <span>Out for delivery</span>
                </li>
    
                <li class="status_line text-xl " data-status="completed">
                    <span>Complete</span>
                </li>
    
            </ul>
    
        </div>
 
    </div>

</section>


